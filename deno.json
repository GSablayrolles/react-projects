{
  "tasks": {
    "dev": "deno fmt --watch & deno run -A --node-modules-dir=auto npm:vite",
    "slot-machine": "deno fmt --watch & deno run -A --node-modules-dir=auto npm:vite -m slot-machine ",
    "shopping-list": "deno fmt --watch & deno run -A --node-modules-dir=auto npm:vite -m shopping-list ",
    "build": "deno run -A --node-modules-dir=auto npm:vite build"
  },
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.0",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.3.3",
    "react": "npm:react@^19.1.0",
    "react-dom": "npm:react-dom@^19.1.0",
    "react-router-dom": "npm:react-router-dom@^7.1.3",
    "vite": "npm:vite@^6.3.5"
  },
  "compilerOptions": {
    "types": [
      "react",
      "react-dom",
      "@types/react"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
